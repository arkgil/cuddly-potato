<div class="jumbotron">
  <h3>Join the chatroom now!</h3>
  <%= form_for @conn, "/chatroom", [name: :user], fn f -> %>
    <div class="form-group">
      <%= text_input f, :name, class: "form-control", placeholder: "Username" %>
      <%= submit "Join", class: "btn btn-primary", id: "submit-button" %>
    </div>
  <% end %>
</div>
